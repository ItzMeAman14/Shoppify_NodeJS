<%- include("./layouts/main") %>

<div style="background-color: aliceblue; padding: 20px; font-family: 'Arial', sans-serif;">

    <div class="container">
        <div class="row">

            <!-- Product Card -->
            <div class="col-md-6 mb-4">
                <div class="card" style="width: 100%; height: 38rem; background-color: aliceblue; border: 1px solid #ddd; border-radius: 15px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); transition: transform 0.3s ease, box-shadow 0.3s ease;">
                    <div class="card-img-top" style="height: 60%; overflow: hidden; border-top-left-radius: 15px; border-top-right-radius: 15px;">
                        <img src="<%= product.image %>" style="object-fit: contain; width: 100%; height: 100%;" alt="Product Image">
                    </div>
                    <div class="card-body">
                        <h3 class="card-text" style="font-size: 1.5rem; margin-bottom: 15px; color: #333;"><%= product.title %></h3>
                        <button onclick="buy()" type="button" class="btn btn-outline-warning" style="margin-bottom: 10px; width: 100%; border-radius: 20px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); transition: background-color 0.3s ease, color 0.3s ease;">
                            Buy Now
                        </button>
                        <button type="button" class="btn btn-primary" style="width: 100%; border-radius: 20px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                            Rating <%= product.rating.rate %> &star;
                        </button>
                    </div>
                </div>
            </div>

            <!-- Product Details Card -->
            <div class="col-md-6 mb-4">
                <div class="card" style="width: 100%; background: linear-gradient(to right, rgb(195, 222, 245), #ffffff); border: 1px solid #ddd; border-radius: 15px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
                    <div class="card-body">
                        <h1 id="price" style="font-size: 2rem; margin-bottom: 20px; color: #333;">
                            Price: $<%= product.price %>
                            <span id="discount" style="text-decoration: line-through; color: red; display: inline; margin-left: 10px;">$30</span>
                        </h1>
                        <p class="card-text" style="font-size: 22px; margin-bottom: 20px; color: #555;">
                            <%= product.description %>
                        </p>
                        <button type="button" class="btn btn-outline-danger" style="width: 100%; border-radius: 20px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                            Only <%= product.rating.count %> pieces Left
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>

