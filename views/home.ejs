<%- include("./layouts/main")%>

<div id="carouselExampleCaptions" class="carousel slide">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/home-appliances.jpg" style="object-fit: cover;" width="500" height="718" class="d-block w-100" alt="home-appliances">
      <div class="carousel-caption d-none d-md-block">
        <h3>Home Appliances</h3>
        <h2>15% Off</h2>
      </div>
    </div>
    <div class="carousel-item">
      <img src="/kids-toys2.jpg" style="object-fit: cover;" width="500" height="718" class="d-block w-100" alt="Toys">
      <div class="carousel-caption d-none d-md-block">
        <h3>Kid's Toys</h3>
        <h2>30% Off</h2>
      </div>
    </div>
    <div class="carousel-item">
      <img src="/accessories.jpg" style="object-fit: cover;" width="500" height="718" class="d-block w-100" alt="Accessories">
      <div class="carousel-caption d-none d-md-block">
        <h3>Accessories For Travelling</h3>
        <h2>40% Off</h2>
      </div>
    </div>
    <div class="carousel-item">
      <img src="/sofa2.webp" style="object-fit: cover;" width="500" height="718" class="d-block w-100" alt="Sofa">
      <div class="carousel-caption d-none d-md-block">
        <h3>Sofa</h3>
        <h2>30% Off</h2>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev" id="prevButton">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next" id="forButton">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<script>
  window.onload = function autoSlide(){
    let counter = 4000;
    const forwardButton = document.getElementById("forButton");
    const prevButton = document.getElementById("prevButton");
    prevButton.onclick = function(){
      setTimeout(() => {
        var id = setInterval(() => {
          forwardButton.click();
        },counter);
      },8000);
  
    }
    var id = setInterval(() => {
      forwardButton.click();
    },counter);
  }
</script>