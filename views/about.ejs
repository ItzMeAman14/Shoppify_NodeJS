<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <style>
        .background-image {
            background-image: url(./bg-main.png);
            background-repeat: no-repeat;
            background-size: cover;
            min-height: 100vh;
            /* Add padding to ensure content isn't too close to edges */
            padding: 20px;
        }
        .carousel-item img {
            object-fit: cover; /* Ensure images cover the container */
            width: 100%; /* Make images responsive */
            height: 60vh; /* Adjust height for better visibility */
        }
        .carousel-caption {
            bottom: 20%; /* Position captions closer to the bottom */
            left: 5%;
            right: 5%;
        }
        @media (max-width: 768px) {
            .carousel-caption {
                bottom: 10%; /* Adjust caption position on smaller screens */
                left: 2%;
                right: 2%;
            }
        }
        .carousel-control-prev, .carousel-control-next {
            width: 5%; /* Adjust control button width */
            height: 100%; /* Ensure controls cover full height */
        }
        .carousel-control-prev-icon, .carousel-control-next-icon {
            background-color: rgba(0,0,0,0.5); /* Add background to control icons */
            border-radius: 50%; /* Round control icons */
        }
        @media (max-width: 768px) {
            .carousel-control-prev, .carousel-control-next {
                width: 8%; /* Increase control button width on smaller screens */
            }
        }
    </style>
</head>
<body>
  <div class="background-image">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Shoppify</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/shop">Shop</a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Products
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/shop/sofa">Home Accessories</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/shop/remote-car">Kids Section</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/shop/table-fan">Home Appliances</a></li>
              </ul>
            </li>
          </ul>
          <div class="d-flex">
            <% if (data.isLogin) { %>
              <button style="background: transparent; border: none;" id="settings" class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">&#9881;</button>
            <% } else { %>
              <a id="signup" href="/signup" style="margin-right: 10px;" class="btn btn-outline-primary">Sign Up</a>
              <a href="/login" class="btn btn-outline-success" id="login">Login</a>
            <% } %>
          </div>
        </div>
      </div>
    </nav>

    <!-- Carousel Code -->
    <div id="carouselExampleCaptions" class="carousel slide">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/home-appliances.jpg" class="d-block w-100" alt="home-appliances">
          <div class="carousel-caption d-none d-md-block">
            <h3>Home Appliances</h3>
            <h2>15% Off</h2>
          </div>
        </div>
        <div class="carousel-item">
          <img src="/kids-toys2.jpg" class="d-block w-100" alt="Toys">
          <div class="carousel-caption d-none d-md-block">
            <h3>Kid's Toys</h3>
            <h2>30% Off</h2>
          </div>
        </div>
        <div class="carousel-item">
          <img src="/accessories.jpg" class="d-block w-100" alt="Accessories">
          <div class="carousel-caption d-none d-md-block">
            <h3>Accessories For Travelling</h3>
            <h2>40% Off</h2>
          </div>
        </div>
        <div class="carousel-item">
          <img src="/sofa2.webp" class="d-block w-100" alt="Sofa">
          <div class="carousel-caption d-none d-md-block">
            <h3>Sofa</h3>
            <h2>30% Off</h2>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev" id="prevButton">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next" id="forButton">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>

  <script>
    window.onload = function autoSlide() {
      let counter = 4000;
      const forwardButton = document.getElementById("forButton");
      const prevButton = document.getElementById("prevButton");

      prevButton.onclick = function() {
        setTimeout(() => {
          var id = setInterval(() => {
            forwardButton.click();
          }, counter);
        }, 8000);
      }

      var id = setInterval(() => {
        forwardButton.click();
      }, counter);
    }
  </script>
</body>
</html>
