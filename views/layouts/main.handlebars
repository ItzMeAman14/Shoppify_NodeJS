<button style="visibility: hidden; border-radius:100%;" id="settings" class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">&#9881</button>

</nav>


<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
  <div class="offcanvas-header"
    <button type="button" id="close-button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div style="display: flex; height:100px" class="profile">
    <div style="height: 100px; width:100px;" class="img-con">
     <img style="height:100%; width:100%; object-fit:cover" src="./default-avatar.png" alt="default-avatar">
    </div>
    <div>
      <h4 style="padding:0px; margin-left:20px; margin-top:5px; height:fit-content;">Hello,</h4>
      <h5 style="margin-left: 20px;" id="name"></h5>
    </div>
  </div>
  <div class="offcanvas-body">
    <hr>
    <a href="/editProfile">Edit Profile &#9997;</a>
  <form action="/logout" method="post">
  <input type="submit" value="Logout" class="btn btn-outline-danger">
  </form>
  </div>
</div>


      {{{body}}}
</body>

<script>
    setInterval(async () => {
        let checkLogin = true;
        const c = await fetch("http://localhost:3000/users");
        const data = await c.json();
        for(var i=0;i<data.length;i++){
            if(data[i].isLogin === true){
                document.getElementById('name').innerText = data[i].username;
                document.getElementById('login').style.visibility = "hidden";
                document.getElementById('signup').style.visibility = "hidden";
                document.getElementById('settings').style.visibility = "visible";
                checkLogin = true;
                break;
            }
            else{
              checkLogin = false;
            }
        }
        if(checkLogin === false){
          document.getElementById('close-button').click();
          document.getElementById('settings').style.visibility = "hidden";
          document.getElementById('login').style.visibility = "visible";
          document.getElementById('signup').style.visibility = "visible";
        }
    },10);
</script>

</html>